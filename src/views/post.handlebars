<div class="container p-3">
  <h2 class="text-center mb-3">üìù Nuevo Post</h2>

  <div class="card shadow border-0">
    <div class="card-body p-3">
      <form id="postForm">
        <textarea id="text" name="text" class="form-control mb-2" rows="3" placeholder="Escribe algo..."
          required></textarea>
        <button type="submit" class="btn btn-primary w-100">üöÄ Publicar</button>
      </form>
    </div>
  </div>

  <div class="text-center mt-3">
    <a href="/" class="btn btn-outline-secondary w-100">‚¨Ö Volver</a>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
  const socket = io();

  document.getElementById('postForm').addEventListener('submit', async (event) => {
    event.preventDefault();

    const userId = localStorage.getItem('userId'); // Tomamos el userId guardado
    if (!userId) {
      alert('No tienes una sesi√≥n activa. Reg√≠strate primero.');
      window.location.href = '/register';
      return;
    }

    const text = document.getElementById('text').value;

    const response = await fetch('/api/posts', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ userId, text })
    });

    if (response.ok) {
      const data = await response.json();
      //emitimos el evento para que todos a√±adan el nuevo post
      socket.emit("new post", { ...data.payload });
      alert('Post creado con √©xito');
      window.location.href = '/'; // Redirige a la lista de posts
    } else {
      alert('Error al crear el post');
    }
  });
</script>